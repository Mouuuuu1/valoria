# Server Configuration
PORT=5001
NODE_ENV=development

# Database - PostgreSQL
DATABASE_URL="postgresql://username@localhost:5432/valorina?schema=public"
# For production, use hosted PostgreSQL (Supabase, Neon, Railway, etc.):
# DATABASE_URL="postgresql://username:password@host:5432/valorina?schema=public"

# JWT Secret (Generate a secure random string)
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Cloudinary (Optional - for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
